<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/black"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Subject_EditText2"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Enter Title"
        android:padding="8dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        android:backgroundTint="#512DA8"
        ></EditText>

    <EditText
        android:backgroundTint="#512DA8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DescriptionEditText2"
        android:ems="10"
        android:hint="Enter Description"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        style="@style/ThemeOverlay.MaterialComponents.Light"
        ></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Update2"
            android:text="Update"
            android:layout_weight="1"
            android:backgroundTint="#512DA8"
            android:layout_margin="5dp"
            ></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_delet2"
            android:layout_weight="1"
            android:backgroundTint="#512DA8"
            android:layout_margin="5dp"
            android:text="Delete"> </Button>

    </LinearLayout>

</LinearLayout>